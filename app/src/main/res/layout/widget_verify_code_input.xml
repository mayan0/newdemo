<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码下发至"
            android:textColor="#3a3a3a"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="183 1100 5528"
            android:textColor="#3a3a3a"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hint_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title_ll"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#979797"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/resend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#618dfb"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </LinearLayout>

    <com.amap.driverdemo.module.verifyphone.widget.VerifyCodeInputETWidget
        android:id="@+id/verify_code_input"
        android:layout_marginTop="20dp"
        android:layout_below="@id/hint_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </com.amap.driverdemo.module.verifyphone.widget.VerifyCodeInputETWidget>

</merge>
