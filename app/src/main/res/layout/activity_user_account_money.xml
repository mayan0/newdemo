<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#f1f4f6"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.amap.driverdemo.common.widget.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.amap.driverdemo.common.widget.BackTitleBar>

    <com.amap.driverdemo.module.useraccount.widget.UserAccountMoneyWidget
        android:id="@+id/user_account_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.amap.driverdemo.module.useraccount.widget.UserAccountMoneyWidget>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#6a7176"
        android:gravity="center_horizontal"
        android:text="绑定银行卡后，每周二自动打款"
        />
</LinearLayout>