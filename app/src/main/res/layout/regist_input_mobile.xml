<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/passport_black2"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:text="@string/passport_input_mobile_country" />
    <TextView
        android:textSize="14.0sp"
        android:gravity="center_vertical"
        android:id="@+id/passport_country"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:textColor="@color/passport_black3"
        android:layout_marginRight="12.5dip"
        android:text="中国"
        android:layout_alignParentRight="true" />
    <View
        android:id="@+id/view1"
        android:background="@color/passport_black3"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/passport_country" />
    <TextView
        android:id="@+id/passport_mobile_delete"
        android:visibility="invisible"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginTop="29.5dip"
        android:src="@drawable/passport_close"
        android:layout_below="@id/view1"
        android:layout_alignParentRight="true" />
    <EditText
        android:textSize="16.0dip"
        android:textColor="#ff000000"
        android:textColorHint="#ffe5e5e5"
        android:layout_gravity="center"
        android:id="@+id/passport_mobile_phone"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="33.0dip"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="23.0dip"
        android:hint="@string/passport_please_enter_phone"
        android:maxLength="11"
        android:layout_toLeftOf="@id/passport_mobile_delete"
        android:layout_below="@id/view1"
        android:inputType="phone"
        android:imeOptions="actionNext" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/passport_black2"
        android:gravity="center_vertical"
        android:id="@+id/passport_country_code"
        android:layout_width="wrap_content"
        android:layout_height="33.0dip"
        android:text="+86"
        android:layout_alignBottom="@id/passport_mobile_phone"
        android:layout_alignParentLeft="true" />
    <View
        android:id="@+id/view"
        android:background="@color/passport_black3"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/passport_mobile_phone" />
</RelativeLayout>